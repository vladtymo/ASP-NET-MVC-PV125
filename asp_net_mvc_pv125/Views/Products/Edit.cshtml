@model DataAccess.Entities.Product;

<h1>Edit Product</h1>

@* asp-action - method to invoke on submit button click *@
<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price">
        <span asp-validation-for="Price" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-select"></select>
        <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="ImagePath" class="form-label">Image URL</label>
        <input asp-for="ImagePath" type="url" class="form-control" placeholder="Enter image URL">
        <span asp-validation-for="ImagePath" class="form-text text-danger"></span>
    </div>

    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-primary w-100">Edit</button>
    </div>
</form>