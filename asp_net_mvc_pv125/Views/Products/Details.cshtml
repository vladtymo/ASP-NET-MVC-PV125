@model BusinessLogic.DTOs.ProductDto;

<div class="card text-center">
    <h2 class="card-header">Product Detail Information</h2>
    <div class="card-body">
        <div class="product-image">
            <img src="@(Model.ImagePath ?? "https://www.freeiconspng.com/thumbs/no-image-icon/no-image-icon-15.png")" class="card-img-top" alt="Product Image">
        </div>
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            @(Model.CategoryName ?? "category not loaded")
            <span class="badge bg-primary">@Model.Price$</span>
        </p>

        @if(ViewBag.ReturnUrl == null)
        {
            <a asp-action="Index" class="btn btn-dark">Back</a>
        }
        else
        {
            <a href="@ViewBag.ReturnUrl" class="btn btn-dark">Back</a>
        }
    </div>
</div>