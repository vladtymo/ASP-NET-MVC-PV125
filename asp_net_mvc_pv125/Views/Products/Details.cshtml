@model DataAccess.Entities.Product;

<div class="card text-center">
    <h2 class="card-header">Product Detail Information</h2>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            @Model.Category
            <span class="badge bg-primary">@Model.Price$</span>
        </p>
        <a asp-action="Index" class="btn btn-dark">Back</a>
    </div>
</div>